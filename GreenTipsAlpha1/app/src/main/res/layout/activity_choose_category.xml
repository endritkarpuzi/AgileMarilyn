<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenback"
    tools:context=".choose_category">

    <include layout="@layout/base_activity" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:enabled="false"
        android:text="@string/chooseCat"
        android:textAlignment="center"
        android:textColor="#145317"
        android:textSize="35sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/scrollLayoutCat"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/idtransport"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:background="@drawable/rounded_tip_corner"
            android:onClick="gotransport"
            android:text="@string/transport"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/idhousehold"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:background="@drawable/rounded_tip_corner"
            android:onClick="gohousehold"
            android:text="@string/household"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/idoutdoors"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:background="@drawable/rounded_tip_corner"
            android:onClick="gooutdoors"
            android:text="@string/outdoors"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/idsociallife"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:background="@drawable/rounded_tip_corner"
            android:onClick="gosocial"
            android:text="@string/sociallife"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/idworklife"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:background="@drawable/rounded_tip_corner"
            android:onClick="goworklife"
            android:text="@string/worklife"
            android:textAllCaps="false" />

    </LinearLayout>

    <Button
        android:id="@+id/homebutton"
        android:alpha="0.8"
        android:background="@drawable/homebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:onClick="returnHome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/button_links"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_marginStart="312dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/link_icon"
        android:onClick="goTolinkspage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>