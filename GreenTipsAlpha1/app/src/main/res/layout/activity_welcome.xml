<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome">

    <TextView
        android:layout_width="395dp"
        android:layout_height="785dp"
        android:background="@drawable/greenhome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="240dp"
        android:alpha="0.7"
        android:background="@drawable/rounded_corners"
        android:onClick="chooseLangScreen"
        android:text="@string/continueButton"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:alpha="0.7"
        android:background="@drawable/rounded_corners"
        android:onClick="categoryScreen"
        android:text="@string/category"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="648dp"
        android:background="@drawable/rounded_corners"
        android:onClick="aboutScreen"
        android:alpha="0.7"
        android:text="@string/aboutButton"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="648dp"
        android:background="@drawable/rounded_corners"
        android:onClick="helpScreen"
        android:alpha="0.7"
        android:text="@string/help"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>