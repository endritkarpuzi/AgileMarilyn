<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenback"
    tools:context=".householdTips">

    <include layout = "@layout/base_activity" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:enabled="false"
        android:text="@string/household"
        android:textColor="#145317"
        android:textAlignment="center"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="000dp">

        <Button
            android:id="@+id/switchviewtoslide"
            android:onClick="switchView"
            android:alpha="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch view" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollViewHousehold"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/scrollLayoutHousehold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="370dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/householdtip1"
                android:onClick="goToHouseholdSlide"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:alpha="0.7"
                android:background="@drawable/rounded_tip_corner"
                android:textAllCaps="false"
                android:text="@string/shorthouseholdtip1"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/householdtip2"
                android:onClick="goToHouseholdSlide"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:textAllCaps="false"
                android:background="@drawable/rounded_tip_corner"
                android:text="@string/shorthouseholdtip2"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/householdtip3"
                android:onClick="goToHouseholdSlide"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:textAllCaps="false"
                android:background="@drawable/rounded_tip_corner"
                android:text="@string/shorthouseholdtip3"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/householdtip4"
                android:onClick="goToHouseholdSlide"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:textAllCaps="false"
                android:background="@drawable/rounded_tip_corner"
                android:text="@string/shorthouseholdtip4"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/householdtip5"
                android:onClick="goToHouseholdSlide"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:textAllCaps="false"
                android:background="@drawable/rounded_tip_corner"
                android:text="@string/shorthouseholdtip5"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/householdtip6"
                android:onClick="goToHouseholdSlide"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:textAllCaps="false"
                android:background="@drawable/rounded_tip_corner"
                android:text="@string/shorthouseholdtip6"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/householdtip7"
                android:onClick="goToHouseholdSlide"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:alpha="0.8"
                android:textAllCaps="false"
                android:background="@drawable/rounded_tip_corner"
                android:text="@string/shorthouseholdtip7"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/homebutton"
        android:alpha="0.8"
        android:background="@drawable/homebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:onClick="returnHome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="80dp" />

    <Button
        android:id="@+id/undo"
        android:alpha="0.8"
        android:background="@drawable/undo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="returnActivity"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>