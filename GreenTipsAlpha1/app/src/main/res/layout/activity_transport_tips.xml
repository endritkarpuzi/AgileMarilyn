<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transportTips">

    <include layout = "@layout/base_activity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:enabled="false"
        android:text="@string/transport"
        android:textColor="#145317"
        android:textAlignment="center"
        android:textSize="40sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="000dp">

    <Button
        android:id="@+id/switchviewtoslide"
        android:onClick="switchView"
        android:alpha="1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch view" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewTransport"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/scrollLayoutHousehold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="370dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/transporttip1"
                android:onClick="goToTransportSlide"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:textAllCaps="false"
                android:text="@string/shorttransporttip1" />

            <Button
                android:id="@+id/transporttip2"
                android:onClick="goToTransportSlide"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:text="@string/shorttransporttip2"/>

            <Button
                android:id="@+id/transporttip3"
                android:onClick="goToTransportSlide"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:text="@string/shorttransporttip3" />

            <Button
                android:id="@+id/transporttip4"
                android:onClick="goToTransportSlide"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:text="@string/shorttransporttip4" />

            <Button
                android:id="@+id/transporttip5"
                android:onClick="goToTransportSlide"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:text="@string/shorttransporttip5" />

            <Button
                android:id="@+id/transporttip6"
                android:onClick="goToTransportSlide"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:text="@string/shorttransporttip6" />

            <Button
                android:id="@+id/transporttip7"
                android:onClick="goToTransportSlide"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:textAllCaps="false"
                android:text="@string/shorttransporttip7" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/homebutton"
        android:alpha="0.8"
        android:background="@drawable/homebutton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:onClick="returnHome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="80dp" />

    <Button
        android:id="@+id/undo"
        android:alpha="0.8"
        android:background="@drawable/undo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="returnActivity"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>