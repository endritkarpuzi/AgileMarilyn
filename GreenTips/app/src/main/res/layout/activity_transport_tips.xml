<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransportTipsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="313dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:alpha="0.7"
        android:background="@drawable/rounded_corners"
        android:enabled="false"
        android:text="Choose a tip"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewLTransport"
        android:layout_width="400dp"
        android:layout_height="420dp"
        android:layout_marginTop="280dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/scrollLayoutTransport"
            android:layout_width="350dp"
            android:layout_height="800dp"
            android:layout_marginTop="360dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/tip1"
                android:alpha="0.7"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:text="Topic 1" />

            <Button
                android:id="@+id/tip2"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:text="Topic 2" />

            <Button
                android:id="@+id/tip3"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:text="Topic 3" />

            <Button
                android:id="@+id/tip4"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:text="Topic 4" />

            <Button
                android:id="@+id/tip5"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:text="Topic 5" />

            <Button
                android:id="@+id/tip6"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:text="Topic 6" />

            <Button
                android:id="@+id/tip7"
                android:alpha="0.8"
                android:background="@drawable/rounded_tip_corner"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"

                android:text="Topic 7" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>