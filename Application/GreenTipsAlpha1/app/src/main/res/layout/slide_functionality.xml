<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">


    <TextView
        android:id="@+id/switchviewtoslide"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:alpha="1.0"
        android:text="@string/discover_tips_by_swiping_left_and_right"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#145317"/>

    <ImageView
        android:id="@+id/slide_image2"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginBottom="432dp"
        android:contentDescription="@string/image_slide" />

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="438dp"
        android:contentDescription="@string/image_slide" />

    <Button
        android:id="@+id/slide_heading"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:alpha="0.8"
        android:background="@drawable/rounded_tip_corner"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:gravity = "center_horizontal" />
</RelativeLayout>

